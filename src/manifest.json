{
	"name": "Gmail Color Diff",
	"version": "0.1.4",
	"manifest_version": 2,

	"description": "This extension colors diff patches inline a Gmail email.",

	"permissions": [
		"https://mail.google.com/*"
	],

	"icons": {
		"128": "images/icon128.png"
	},

	"content_scripts": [{
		"matches": ["https://mail.google.com/*"],
		"js": ["gcolordiff.js"],
		"css": ["gcolordiff.css"],
		"run-at": "document_end"
	}]
}
